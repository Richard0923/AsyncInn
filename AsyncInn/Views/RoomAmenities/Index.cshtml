@model IEnumerable<AsyncInn.Models.RoomAmenities>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />

</head>
<body>
    <div class="Nav">
        <h1>ASync Inn Hotel Manager</h1>
        <a class="Nav-1" asp-controller="Hotels">Hotel Page</a>
        <a class="Nav-2" asp-controller="Rooms">Rooms Page</a>
        <a class="Nav-3" asp-controller="Amenities">Amenites Page</a>
        <a class="Nav-4" asp-controller="RoomAmenities">Room Manager</a>
        <a class="Nav-5" asp-controller="HotelRooms">Hotel Manager</a>
        <a asp-action="Create">Create New</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Room)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Room.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { roomID = item.RoomID, amenitiesID = item.AmenitiesID }) |
                        @Html.ActionLink("Delete", "Delete", new { roomID = item.RoomID, amenitiesID = item.AmenitiesID })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
